<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronic_Gadget</title>
    <link href="~/temp/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/temp/css/global.css" rel="stylesheet">
    <link href="~/temp/css/index.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="~/temp/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Alata&display=swap" rel="stylesheet">
    <script src="temp/js/jquery-2.1.1.min.js"></script>
    <script src="temp/js/bootstrap.min.js"></script>
</head>

<body>
    <section id="top">
        <div class="container">
            <div class="row">
                <div class="top_1 clearfix">
                    <div class="col-sm-4">
                        <div class="top_1l clearfix">
                            <p class="mgt col"><i class="fa fa-map-marker col_1"></i> 258 Hamilton East ,Waikato </p>
                            <p class="col"><i class="fa fa-clock-o col_1"></i> Mon-Fri 09:00 AM - 06:00 PM</p>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="top_1m text-center clearfix">
                            <h1 class="mgt"><a asp-area="" asp-page="/Index">Electronia <span></span></a></h1>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="top_1r text-center clearfix">
                            <h3 class="mgt"><a href="#"><i class="fa fa-phone col_1"></i> 0284301562 <span>Call us now. Resistance is futile!</span></a></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="main clearfix">
        <section id="header" class="clearfix">
            <div class="container">
                <div class="row">
                    <div class="haeder clearfix">
                        <nav class="navbar">
                            <div class="navbar-header">
                                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" asp-area="" asp-page="/Index">Electronic_Gadget</a>
                            </div>


                            <div class="collapse navbar-collapse js-navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li>  <a class="font_tag" asp-area="" asp-page="/Index">Home</a></li>

                                    <li><a class="font_tag" asp-area="" asp-page="/Customers/Index">Customers</a></li>
                                    <li><a class="font_tag" asp-area="" asp-page="/Brands/Index">Brands</a></li>
                                    <li><a class="font_tag" asp-area="" asp-page="/Categories/Index">Categories</a></li>
                                    <li><a class="font_tag" asp-area="" asp-page="/Products/Index">Products</a></li>
                                    <li><a class="font_tag" asp-area="" asp-page="/Orders/Index">Orders</a></li>

                                </ul>

                            </div><!-- /.nav-collapse -->
                        </nav>
                    </div>
                </div>
            </div>
        </section>



        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted p-4">
            <div class="container">
                &copy; 2021 - Electronic_Gadget -
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
